<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true">

    <bean id="loaderDb" class="ru.ibsqa.chameleon.definitions.repository.xmlloader.LoaderXmlImpl">
        <property name="factory">
            <bean class="ru.ibsqa.chameleon.definitions.repository.db.LoaderXmlFactoryDbImpl"/>
        </property>
    </bean>

    <bean class="ru.ibsqa.chameleon.definitions.repository.RepositoryManagerImpl" primary="true">
        <property name="repositories">
            <list>
                <bean class="ru.ibsqa.chameleon.definitions.repository.RepositoryWrapperImpl">
                    <property name="fileName" value="classpath:/db/db_definitions.xml"/>
                    <property name="loader" ref="loaderDb"/>
                </bean>
            </list>
        </property>
    </bean>
</beans>