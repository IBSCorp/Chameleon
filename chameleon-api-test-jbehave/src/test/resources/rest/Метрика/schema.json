{
  "$schema":"http://json-schema.org/draft-03/schema#",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "measurements": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "statistic": {
            "type": "string",
            "required": true
          },
          "value": {
            "type": "number",
            "required": true
          }
        }
      }
    }
  }
}